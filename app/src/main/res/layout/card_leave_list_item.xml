<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_lay_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="1dp"
        app:cardCornerRadius="20dp">

        <!-- LinearLayout Total Leave -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/tv_tot_applied_leave"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="50"
                android:fontFamily="@font/brownbold"
                android:singleLine="true"
                android:text="25"
                android:textAlignment="textStart"
                android:textColor="#203444"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tv_leave_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:fontFamily="@font/lexenddeca"
                android:layout_marginBottom="20dp"
                android:text="Total Leaves"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="#203444"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>