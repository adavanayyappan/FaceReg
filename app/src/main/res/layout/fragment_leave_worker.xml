<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:foregroundGravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- child view -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lay_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardMaxElevation="1.5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPaddingBottom="0dp"
                app:cardCornerRadius="20dp">

                <!-- LinearLayout Total Leave -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/tv_tot_applied_leave"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/brownbold"
                        android:singleLine="true"
                        android:text="25"
                        android:textAlignment="textStart"
                        android:textColor="#203444"
                        android:textSize="34sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:fontFamily="@font/lexenddeca"
                        android:singleLine="true"
                        android:text="Total"
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textColor="#203444"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_tot_remaining_leave"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="20"
                        android:fontFamily="@font/lexenddeca"
                        android:singleLine="true"
                        android:text="24Leaves"
                        android:textAlignment="textStart"
                        android:textColor="#203444"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lay_annual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="1.5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPaddingBottom="0dp"
                app:cardCornerRadius="20dp">

                <!-- LinearLayout Annual Leave -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/tv_annual_applied_leave"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/brownbold"
                        android:singleLine="true"
                        android:text="3"
                        android:textAlignment="textStart"
                        android:textColor="#203444"
                        android:textSize="34sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:fontFamily="@font/lexenddeca"
                        android:singleLine="true"
                        android:text="Annual"
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textColor="#203444"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_annual_remaining_leave"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="20"
                        android:fontFamily="@font/lexenddeca"
                        android:singleLine="true"
                        android:text="24Leaves"
                        android:textAlignment="textStart"
                        android:textColor="#203444"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lay_sick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="1.5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPaddingBottom="0dp"
                app:cardCornerRadius="20dp">

                <!-- LinearLayout Sick Leave -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/tv_sick_applied_leave"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/brownbold"
                        android:singleLine="true"
                        android:text="3"
                        android:textAlignment="textStart"
                        android:textColor="#203444"
                        android:textSize="34sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:fontFamily="@font/lexenddeca"
                        android:singleLine="true"
                        android:text="Sick"
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textColor="#203444"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sick_remaining_leave"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="20"
                        android:fontFamily="@font/lexenddeca"
                        android:singleLine="true"
                        android:text="24Leaves"
                        android:textAlignment="textStart"
                        android:textColor="#203444"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lay_casual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="1.5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPaddingBottom="0dp"
                app:cardCornerRadius="20dp">

                <!-- LinearLayout Casual Leave -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/tv_casual_applied_leave"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/brownbold"
                        android:singleLine="true"
                        android:text="3"
                        android:textAlignment="textStart"
                        android:textColor="#203444"
                        android:textSize="34sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:fontFamily="@font/lexenddeca"
                        android:singleLine="true"
                        android:text="Casual"
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textColor="#203444"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_casual_remaining_leave"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="20"
                        android:fontFamily="@font/lexenddeca"
                        android:singleLine="true"
                        android:text="24Leaves"
                        android:textAlignment="textStart"
                        android:textColor="#203444"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_worker_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_apply_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="@color/dark_gray"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_white_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>